<%=form_with model: article do |form|%>
        <p>
            <%= form.label :title %>
            
        </p>
        <p>
            <%= form.text_field :title %>
        </p>

        <p>
            <%= form.label :description %>
        </p>
        <p>
            <%= form.text_area :description %>
        </p>

        <p>
            <%= form.submit @article.persisted? ? "Update Article" : "Save Article" %>
        </p>
<%end%>